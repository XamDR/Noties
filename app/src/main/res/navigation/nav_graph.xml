<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/nav_welcome">

	<fragment
		android:id="@+id/nav_welcome"
		android:name="net.azurewebsites.eznotes.ui.onboarding.WelcomeFragment"
		android:label="">

		<argument
			android:name="ShowToolbar"
			android:defaultValue="false" />

		<argument
			android:name="ShowFab"
			android:defaultValue="false" />

		<action
			android:id="@+id/action_welcome_to_notes"
			app:destination="@id/nav_notes"
			app:launchSingleTop="true"
			app:popUpTo="@id/nav_graph"
			app:popUpToInclusive="true"/>
	</fragment>

	<fragment
		android:id="@+id/nav_notes"
		android:name="net.azurewebsites.eznotes.ui.notes.NoteListFragment"
		android:label=" "
		tools:layout="@layout/fragment_note_list">

		<argument
			android:name="ShowToolbar"
			android:defaultValue="true" />

		<argument
			android:name="ShowFab"
			android:defaultValue="true" />

		<action
			android:id="@+id/action_notes_to_editor"
			app:destination="@id/nav_editor" />
	</fragment>

	<fragment
		android:id="@+id/nav_editor"
		android:name="net.azurewebsites.eznotes.ui.editor.TextEditorFragment"
		android:label="@string/text_editor_fragment_label"
		tools:layout="@layout/fragment_text_editor">

		<argument
			android:name="ShowToolbar"
			android:defaultValue="false" />

		<argument
			android:name="ShowFab"
			android:defaultValue="false" />

		<action
			android:id="@+id/action_editor_gallery"
			app:destination="@id/nav_gallery" />
	</fragment>

	<fragment
		android:id="@+id/nav_folders"
		android:name="net.azurewebsites.eznotes.ui.folders.FolderListFragment"
		android:label="@string/directory_list_fragment_label"
		tools:layout="@layout/fragment_folder_list">

		<argument
			android:name="ShowToolbar"
			android:defaultValue="true" />

		<argument
			android:name="ShowFab"
			android:defaultValue="true" />
	</fragment>

	<fragment
		android:id="@+id/nav_settings"
		android:name="net.azurewebsites.eznotes.ui.settings.SettingsFragment"
		android:label="@string/settings_fragment_label">

		<argument
			android:name="ShowToolbar"
			android:defaultValue="true" />

		<argument
			android:name="ShowFab"
			android:defaultValue="false" />
	</fragment>

	<activity
		android:id="@+id/nav_gallery"
		android:name="net.azurewebsites.eznotes.ui.media.GalleryActivity"
		android:label="GalleryActivity" />
</navigation>