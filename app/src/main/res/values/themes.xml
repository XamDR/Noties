<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="Theme.Noties" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="android:statusBarColor">@color/md_theme_light_surface</item>
		<item name="android:windowLightStatusBar">true</item>
	</style>

	<style name="Theme.SplashScreen.Noties" parent="Theme.SplashScreen">
		<item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
		<item name="windowSplashScreenAnimationDuration">1000</item>
		<item name="postSplashScreenTheme">@style/Theme.Noties</item>
	</style>

	<style name="Theme.Noties.MediaViewer" parent="Theme.Noties">
		<item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
	</style>

	<style name="Theme.Noties.DateTimePicker" parent="Theme.Material3.DayNight.Dialog"/>
</resources>